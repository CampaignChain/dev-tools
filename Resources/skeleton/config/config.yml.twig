# Please add the global configuration options for your module here
{% if module_type == 'operation' %}
assetic:
    bundles:
        - {{ bundle_name }}
    assets:
        {{ vendor_name|lower }}_operation_{{ module_name|lower|replace({'-':'_'}) }}{{ module_name_suffix ? '_' ~ module_name_suffix|lower|replace({'-':'_'}) : '' }}_css:
            inputs:
                - '@{{ bundle_name }}/Resources/public/css/{{ module_name|lower|replace({'-':'_'}) }}{{ module_name_suffix ? '_' ~ module_name_suffix|lower|replace({'-':'_'}) : '' }}.css'
twig:
    form:
        resources:
            - '{{ bundle_name }}:Form:fields.html.twig'
{% endif %}
