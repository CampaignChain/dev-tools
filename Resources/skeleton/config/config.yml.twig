# Please add the global configuration options for your module here
{% if module_type == 'operation' %}
assetic:
    bundles:
        - {{ bundle_name }}
    assets:
{% for module in modules %}
        {{ vendor_name|lower }}_operation_{{ module.module_name_underscore }}{{ module.module_name_suffix ? '_' ~ module.module_name_suffix|lower|replace({'-':'_'}) : '' }}_css:
            inputs:
                - '@{{ bundle_name }}/Resources/public/css/{{ module.module_name_underscore }}{{ module.module_name_suffix ? '_' ~ module.module_name_suffix|lower|replace({'-':'_'}) : '' }}.css'
{% endfor %}
twig:
    form:
        resources:
            - '{{ bundle_name }}:Form:fields.html.twig'
{% endif %}
