{
    "name": "{{ package_name }}",
    "description": "{{ package_description }}",
    "type": "campaignchain-{{ module_type }}",
    "license": "{{ package_license }}",
    "homepage": "{{ package_website }}",
    "authors": [
        {
            "name": "{{ author_name }}",
            "email": "{{ author_email }}"
        }
    ],
    "require": {
    },
    "autoload": {
        "psr-4": { "{{ namespace }}\\": "" }
    },
    "extra": {
        "campaignchain": {
            "kernel": {
{% if gen_routing == 'yes' %}
                "classes": [
                    "{{ namespace }}\\{{ bundle_name }}"
                ],
                "routing":
                {
                    "name": "{{ route_prefix }}",
                    "resource": "@{{ bundle_name }}/Resources/config/routing.yml",
                    "prefix": "/"
                }
{% else %}
                "classes": [
                    "{{ namespace }}\\{{ bundle_name }}"
                ]
{% endif %}
            }
        }
    }
}