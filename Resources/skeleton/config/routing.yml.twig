# Please add the routes for your module here
{% for module in modules %}
{% if module_type == 'activity' or module_type == 'campaign' %}
{{ vendor_name|lower }}_{{ module_type }}_{{ module.module_name_underscore }}{{ module.module_name_suffix ? '_' ~ module.module_name_suffix|lower|replace({'-':'_'}) : '' }}_new:
    pattern: /{{ module_type }}/{{ module.module_name_hyphen }}{{ module.module_name_suffix ? '/' ~ module.module_name_suffix|lower : '' }}/new
    defaults: { _controller: campaignchain.activity.controller.{{ vendor_name|lower }}.{{ module.module_name_underscore }}{{ module.module_name_suffix ? '.' ~ module.module_name_suffix|lower : '' }}:newAction }

{{ vendor_name|lower }}_{{ module_type }}_{{ module.module_name_underscore }}{{ module.module_name_suffix ? '_' ~ module.module_name_suffix|lower|replace({'-':'_'}) : '' }}_edit:
    pattern: /{{ module_type }}/{{ module.module_name_hyphen }}{{ module.module_name_suffix ? '/' ~ module.module_name_suffix|lower : '' }}/{id}/edit
    defaults: { _controller: campaignchain.activity.controller.{{ vendor_name|lower }}.{{ module.module_name_underscore }}{{ module.module_name_suffix ? '.' ~ module.module_name_suffix|lower : '' }}:editAction }

{{ vendor_name|lower }}_{{ module_type }}_{{ module.module_name_underscore }}{{ module.module_name_suffix ? '_' ~ module.module_name_suffix|lower|replace({'-':'_'}) : '' }}_edit_modal:
    pattern: /modal/{{ module_type }}/{{ module.module_name_hyphen }}{{ module.module_name_suffix ? '/' ~ module.module_name_suffix|lower : '' }}/{id}/edit
    defaults: { _controller: campaignchain.activity.controller.{{ vendor_name|lower }}.{{ module.module_name_underscore }}{{ module.module_name_suffix ? '.' ~ module.module_name_suffix|lower : '' }}:editModalAction }

{{ vendor_name|lower }}_{{ module_type }}_{{ module.module_name_underscore }}{{ module.module_name_suffix ? '_' ~ module.module_name_suffix|lower|replace({'-':'_'}) : '' }}_edit_api:
    pattern: /api/private/{{ module_type }}/{{ module.module_name_hyphen }}{{ module.module_name_suffix ? '/' ~ module.module_name_suffix|lower : '' }}/byactivity/{id}/edit
    defaults: { _controller: campaignchain.activity.controller.{{ vendor_name|lower }}.{{ module.module_name_underscore }}{{ module.module_name_suffix ? '.' ~ module.module_name_suffix|lower : '' }}:editApiAction }
    options:
        expose: true
    
{% endif %}
{% if module_type == 'activity' %}
{{ vendor_name|lower }}_{{ module_type }}_{{ module.module_name_underscore }}{{ module.module_name_suffix ? '_' ~ module.module_name_suffix|lower|replace({'-':'_'}) : '' }}_read:
    pattern: /activity/{{ module.module_name_hyphen }}{{ module.module_name_suffix ? '/' ~ module.module_name_suffix|lower : '' }}/{id}
    defaults: { _controller: campaignchain.activity.controller.{{ vendor_name|lower }}.{{ module.module_name_underscore }}{{ module.module_name_suffix ? '.' ~ module.module_name_suffix|lower : '' }}:readAction }

{% endif %}
{% if module_type == 'campaign' %}
{{ vendor_name|lower }}_{{ module_type }}_{{ module.module_name_underscore }}{{ module.module_name_suffix ? '_' ~ module.module_name_suffix|lower|replace({'-':'_'}) : '' }}_plan:
    pattern: /campaigns/{{ module.module_name_hyphen }}{{ module.module_name_suffix ? '/' ~ module.module_name_suffix|lower : '' }}
    defaults: { _controller: {{ bundle_name }}:{{ module.class_name }}:plan }

{% endif %}
{% if module_type == 'channel' %}
{{ vendor_name|lower }}_{{ module_type }}_{{ module.module_name_underscore }}{{ module.module_name_suffix ? '_' ~ module.module_name_suffix|lower|replace({'-':'_'}) : '' }}_create:
    pattern: /channel/{{ module.module_name_hyphen }}{{ module.module_name_suffix ? '/' ~ module.module_name_suffix|lower : '' }}/create
    defaults: { _controller: {{ bundle_name }}:{{ module.class_name }}:create }
    
{% endif %}
{% if module_type == 'report' %}
{{ vendor_name|lower }}_{{ module_type }}_{{ module.module_name_underscore }}{{ module.module_name_suffix ? '_' ~ module.module_name_suffix|lower|replace({'-':'_'}) : '' }}_index:
    pattern: /report/{{ module.module_name_hyphen }}{{ module.module_name_suffix ? '/' ~ module.module_name_suffix|lower : '' }}/index
    defaults: { _controller: {{ bundle_name }}:{{ module.class_name }}:index }

{% endif %}
{% endfor %}

